package labOneThree;
import java.util.Scanner;
import java.awt.desktop.AboutHandler;
import java.time.Month;


public class DaysOfAMonth {
	public static void main(String[] args) {
		Scanner keyboard = new Scanner(System.in);
		
		
		while (true) {
			System.out.println("Enter a month");
			String strMonth = keyboard.nextLine();
			System.out.println("Enter a year");
			int year = keyboard.nextInt();
			
			
			Month month = null;
	        try {
	            // try to parse the input as a month name or abbreviation
	            month = Month.valueOf(strMonth.toUpperCase());
	        } catch (IllegalArgumentException e) {
	            // if it fails, try to parse the input as a month number
	            try {
	                int monthNumber = Integer.parseInt(strMonth);
	                month = Month.of(monthNumber);
	            } catch (NumberFormatException ex) {
	                // if it fails again, print an error message
	                System.err.println("Invalid month input: " + strMonth);
	            }
	        }
	        if (month != null && year > 0) {
	           break;
	        }
		}
		

       
		
